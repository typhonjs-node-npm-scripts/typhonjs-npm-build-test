/**
 * You can provide comments in `npm-scripts.json`
 *
 * If working with ES6 sources or testing sources make sure `--compilers js:babel-register` is enabled in
 * `test.mocha.options` below and use `babel-node` to invoke any scripts in `package.json`. This includes any test
 * scripts which may also be written in ES6.
 */
{
   "build":
   {
      "babel": { "source": "test-src/src", "destination": "test-src/dist", "options": ["--source-maps true"] }
   },

   "publish":
   {
      "prepublish": { "scripts": ["npm run test-scripts"] }
   },

   "test":
   {
      // Provides a `coverage` handling command that is appended when running on Travis CI.
      "travis": { "coverage": "&& cat ./coverage/lcov.info | ./node_modules/codecov.io/bin/codecov.io.js" },

      "istanbul": { "command": "cover", "options": ["--report lcovonly"] },
      "mocha": { "source": "./test-src/mocha", "options": [ "--compilers js:babel-register", "-t 120000 --recursive" ] }
   }
}
